<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label for="">Titulo:</label>
                        <input type="text" name="title" class="form-control" 
                        placeholder="Image title">
                    </div>
                    <div class="form-group mb-3">
                        <label for="">Descripción:</label>
                        <textarea name="descripcion" class="form-control"
                        placeholder="Image description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label"></label>
                        </div>
                    </div>
                    <button class="btn-primary">
                        Subir foto
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>
                        {{title}}
                    </td>
                    <td>
                        {{descripcion}}
                    </td>
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">Ver</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>
